    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const progressFill = document.querySelector('.progress-fill');
            const progressYear = document.querySelector('.progress-year');
            const dataBubble = document.getElementById('dataBubble');
            const sections = document.querySelectorAll('.section[data-section]');
            const milestones = document.querySelectorAll('.milestone');
            
            // Phase data for progress tracking
            const phaseData = {
                'hero': {
                    year: 'Getting Started',
                    progress: 0,
                    phase: 'Planning Phase',
                    ownership: '0%',
                    equity: '$0',
                    revenue: '$0',
                    pocket: '$0',
                    protection: 'Research',
                    insight: 'Beginning your journey to energy independence and retirement security through smart infrastructure investing.'
                },
                'protected': {
                    year: 'Years 1-6',
                    progress: 24,
                    phase: 'Protected Growth',
                    ownership: '30%',
                    equity: '$360K',
                    revenue: '$55K',
                    pocket: '$0',
                    protection: 'Tax Credits',
                    insight: 'Government incentives cover your payment gaps while you build substantial equity. This is wealth creation with training wheels.'
                },
                'building': {
                    year: 'Years 7-17',
                    progress: 68,
                    phase: 'Building Equity',
                    ownership: '85%',
                    equity: '$1.02M',
                    revenue: '$55K',
                    pocket: '$52K/yr',
                    protection: 'Building',
                    insight: 'The patience phase. Each payment builds your ownership stake in valuable infrastructure that will support your retirement.'
                },
                'breakeven': {
                    year: 'Years 18-20',
                    progress: 80,
                    phase: 'Break-Even',
                    ownership: '95%',
                    equity: '$1.5M',
                    revenue: '$55K',
                    pocket: '$20K/yr',
                    protection: 'Break-Even',
                    insight: 'Your ownership revenue finally exceeds interest costs. The investment works exactly as designed‚Äîpatience pays off.'
                },
                'profit': {
                    year: 'Years 21-25',
                    progress: 100,
                    phase: 'Pure Profit',
                    ownership: '100%',
                    equity: '$2.0M',
                    revenue: '$55K',
                    pocket: '$0',
                    protection: 'Pure Profit',
                    insight: '$43,000 annual profit from debt-free infrastructure. This is true financial freedom and retirement security.'
                },
                'retirement': {
                    year: '2045',
                    progress: 100,
                    phase: 'Golden Years',
                    ownership: '100%',
                    equity: '$2.8M',
                    revenue: '$55K',
                    pocket: '$0',
                    protection: 'Legacy',
                    insight: 'Keep for steady income or sell for capital. Your choice based on retirement needs and family goals.'
                },
                'cta': {
                    year: 'Today',
                    progress: 0,
                    phase: 'Decision Time',
                    ownership: '0%',
                    equity: '$0',
                    revenue: '$0',
                    pocket: '$0',
                    protection: 'Begin',
                    insight: 'The journey to financial independence starts with a single decision. Your future self will thank you.'
                }
            };

            // Update progress display
            function updateProgress(sectionKey) {
                const data = phaseData[sectionKey];
                if (!data) return;

                // Update progress bar with smooth animation
                setTimeout(() => {
                    progressFill.style.width = data.progress + '%';
                }, 100);
                
                progressYear.textContent = data.year;

                // Update milestone states
                const yearNum = data.year.includes('Years') ? parseInt(data.year.split(' ')[1]) : 
                               data.year === '2045' ? 25 : 0;
                
                milestones.forEach((milestone, index) => {
                    const milestoneYear = parseInt(milestone.dataset.year);
                    milestone.classList.remove('completed', 'active');
                    
                    if (yearNum >= milestoneYear) {
                        milestone.classList.add('completed');
                    }
                    
                    if ((yearNum >= milestoneYear && yearNum < (milestones[index + 1]?.dataset.year || 100)) ||
                        (sectionKey === 'profit' && index === 3) ||
                        (sectionKey === 'retirement' && index === 4)) {
                        milestone.classList.add('active');
                    }
                });

                // Update data bubble
                const bubbleYear = dataBubble.querySelector('.bubble-year');
                const bubblePhase = dataBubble.querySelector('.bubble-phase');
                const metrics = dataBubble.querySelectorAll('.bubble-metric .metric-value');
                const insightText = dataBubble.querySelector('.insight-text');

                bubbleYear.textContent = data.year;
                bubblePhase.textContent = data.phase;
                
                if (metrics.length >= 5) {
                    metrics[0].textContent = data.ownership;
                    metrics[1].textContent = data.equity;
                    metrics[2].textContent = data.revenue;
                    metrics[3].textContent = data.pocket;
                    metrics[4].textContent = data.protection;
                }
                
                insightText.textContent = data.insight;

                // Show/hide bubble with better timing
                setTimeout(() => {
                    if (['protected', 'building', 'breakeven', 'profit', 'retirement'].includes(sectionKey)) {
                        dataBubble.classList.add('visible');
                    } else {
                        dataBubble.classList.remove('visible');
                    }
                }, 200);
            }

            // Enhanced Intersection Observer for sections
            const sectionObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const section = entry.target;
                        const sectionKey = section.dataset.section;
                        
                        // Add visible class for gradient effects
                        section.classList.add('visible');
                        
                        // Update progress
                        updateProgress(sectionKey);
                    }
                });
            }, { 
                threshold: 0.3,
                rootMargin: '-10% 0px -10% 0px'
            });

            sections.forEach(section => sectionObserver.observe(section));

            // Enhanced Animation Observer with staggered timing
            const animationObserver = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.classList.add('visible');
                        }, index * 100);
                    }
                });
            }, { 
                threshold: 0.15, 
                rootMargin: '0px 0px -100px 0px' 
            });

            // Observe all animated elements
            document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right, .floating-card, .content-card').forEach(el => {
                animationObserver.observe(el);
            });

            // Milestone clicks for navigation
            milestones.forEach((milestone, index) => {
                milestone.addEventListener('click', () => {
                    const targetSections = ['protected', 'building', 'breakeven', 'profit', 'retirement'];
                    const targetSection = document.querySelector(`[data-section="${targetSections[index]}"]`);
                    if (targetSection) {
                        targetSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                });
            });

            // Smooth parallax effects with better performance
            let ticking = false;
            function updateParallax() {
                const scrolled = window.pageYOffset;
                const sections = document.querySelectorAll('.section');
                
                sections.forEach((section, index) => {
                    const rect = section.getBoundingClientRect();
                    const speed = 0.02;
                    const yPos = scrolled * speed;
                    
                    if (section.querySelector('::before')) {
                        section.style.setProperty('--parallax-y', `${yPos}px`);
                    }
                });
                
                ticking = false;
            }

            function requestTick() {
                if (!ticking) {
                    requestAnimationFrame(updateParallax);
                    ticking = true;
                }
            }

            window.addEventListener('scroll', requestTick, { passive: true });

            // Initialize
            updateProgress('hero');
            
            // Add initial visible class to hero
            document.querySelector('.section.hero').classList.add('visible');
        });
    </script>
</body>
</html> 
